<%% title "<%= plural_name.titleize %>" %>

<table width="100%" border="1">
  <tr>
  <%- for attribute in attributes -%>
    <th><%= attribute.column.human_name.titleize %></th>
  <%- end -%>
    <th colspan="3">Actions</th>
  </tr>
  <%% for <%= singular_name %> in @<%= plural_name %> %>
    <tr>
    <%- for attribute in attributes -%>
      <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
    <%- end -%>
    <%- if action? :show -%>
      <td><%%= link_to "Show", resource_url(<%= singular_name %>) %></td>
    <%- end -%>
    <%- if action? :edit -%>
      <td><%%= link_to "Edit", edit_resource_url(<%= singular_name %>) %></td>
    <%- end -%>
    <%- if action? :destroy -%>
      <td><%%= link_to "Destroy", resource_url(<%= singular_name %>), :confirm => 'Are you sure?', :method => :delete %></td>
    <%- end -%>
    </tr>
  <%% end %>
</table>

<%- if action? :new -%>
<p><%%= link_to "New <%= singular_name.titleize %>", new_resource_url %></p>
<%- end -%>
